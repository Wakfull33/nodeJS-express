doctype html
html
    head
        title #{title}
    body
        h1 Editer une Todo
        ul
            form(method='POST' action='/todos/' + todo.dataValues.id + '?_method=PATCH')
                div.form-group
                    label(for='message') Message :
                    input#message.form-control(type='textarea', placeholder='Message' name='message' value=todo.dataValues.message)
                    label(for='completion') Completion :
                    input#completion(type='checkbox', name='completion' checked = todo.dataValues.completion)

                button(type='submit') Envoyer